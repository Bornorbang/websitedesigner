{% block extra_js %}
{% endblock %}
    background: linear-gradient(135deg, #EF233C 0%, #d63031 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    transition: all 0.3s ease;
}

.option-card:hover .icon {
    transform: scale(1.1);
}

.option-card .icon i {
    font-size: 2rem;
    color: white;
}

.option-card h4 {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2d3436;
    margin-bottom: 15px;
}

.option-card p {
    color: #636e72;
    line-height: 1.6;
    margin: 0;
}

/* Stats Section */
.stats-section {
    color: white;
    padding: 60px 0;
    margin: 80px 0;
    border-radius: 20px;
    position: relative;
    overflow: hidden;
}

.stats-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(239, 35, 60, 0.1) 0%, transparent 100%);
    pointer-events: none;
}

.stats-section .container {
    position: relative;
    z-index: 2;
}

.stat-item {
    text-align: center;
    padding: 20px;
}

.stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: #EF233C;
    display: block;
    margin-bottom: 10px;
}

.stat-label {
    font-size: 1.1rem;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Contact CTA Section */
.contact-cta {
    background: linear-gradient(135deg, #EF233C 0%, #d63031 100%);
    color: white;
    padding: 60px 0;
    border-radius: 20px;
    text-align: center;
    margin-top: 80px;
    position: relative;
    overflow: hidden;
}

.contact-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 30% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.contact-cta .container {
    position: relative;
    z-index: 2;
}

.contact-cta h3 {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 20px;
}

.contact-cta p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
}

.cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-cta {
    background: white;
    color: #EF233C;
    border: 2px solid white;
    padding: 15px 35px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.btn-cta:hover {
    background: transparent;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.btn-cta-outline {
    background: transparent;
    color: white;
    border: 2px solid white;
}

.btn-cta-outline:hover {
    background: white;
    color: #EF233C;
}

/* Benefits Section */
.benefits-section {
    margin: 80px 0;
}

.benefit-item {
    display: flex;
    align-items: center;
    background: white;
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 20px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.benefit-item:hover {
    transform: translateX(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
}

.benefit-icon {
    width: 60px;
    height: 60px;
    background: #EF233C;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20px;
    flex-shrink: 0;
}

.benefit-icon i {
    font-size: 1.5rem;
    color: white;
}

.benefit-content h5 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2d3436;
    margin-bottom: 5px;
}

.benefit-content p {
    color: #636e72;
    margin: 0;
    line-height: 1.5;
}

/* Responsive Design */
@media (max-width: 991px) {
    .advertise-section {
        padding: 60px 0;
    }

    .section-title {
        font-size: 2rem;
    }

    .intro-card {
        padding: 40px 30px;
    }

    .option-card {
        padding: 25px 20px;
    }

    .stat-number {
        font-size: 2.5rem;
    }

    .contact-cta h3 {
        font-size: 1.8rem;
    }

    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
}

@media (max-width: 576px) {
    .advertise-section {
        padding: 50px 0;
    }

    .section-title {
        font-size: 1.8rem;
    }

    .intro-card {
        padding: 30px 20px;
    }

    .option-card {
        padding: 20px 15px;
    }

    .option-card .icon {
        width: 60px;
        height: 60px;
    }

    .option-card .icon i {
        font-size: 1.5rem;
    }

    .stat-number {
        font-size: 2rem;
    }

    .contact-cta {
        padding: 40px 0;
    }

    .contact-cta h3 {
        font-size: 1.6rem;
    }

    .benefit-item {
        flex-direction: column;
        text-align: center;
        padding: 25px 20px;
    }

    .benefit-icon {
        margin-right: 0;
        margin-bottom: 15px;
    }
}

/* Animation Enhancement */
.intro-card,
.option-card,
.benefit-item {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>
{% endblock%}

